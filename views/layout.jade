!!! 5
html(lang='en')
  head
    meta(charset='utf-8')
    title #{title} - #{constants.SITE_TITLE}
    meta(name='description')

    // Le HTML5 shim, for IE6-8 support of HTML elements
    //if lt IE 9
      script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')

    // Le styles
    link(rel='stylesheet', href='/css/bootstrap.css')
    link(rel='stylesheet', href='/css/style.css')

    // Le fav and touch icons
    link(rel='shortcut icon', href='/img/siteicon.png')
   
  body
    div(class='navbar navbar-fixed-top')
      div.navbar-inner
        div.container
          a(class='btn btn-navbar', data-toggle='collapse', data-target='.nav-collapse')
            span.i-bar
            span.i-bar
            span.i-bar
          a(class='brand', href='/') #{constants.SITE_TITLE}
          div.nav-collapse
            ul.nav
              li.active
                a(href='/') Home
              li.active
                a(href='/about') My Account
              li.active
                a(href='/services') Services
              li.active
                a(href='/aboutus') About
              li.active
                a(href='/contactus') Contact
            // p.pull-right Logged in as 
            //   a(href='#') username
            form(class='navbar-search pull-right', action='/search', method='GET')
              input(type='text', name='q', class='search-query span2', placeholder='Search')

    div.container!= body
      hr 
      footer
        p &copy; 2012 Company. All Rights Reserved. 

    // Le javascript
    // Placed at the end of the document so the pages load faster
    script(src='/js/jquery.js')
    script(src='/js/bootstrap-transition.js')
    script(src='/js/bootstrap-collapse.js')
